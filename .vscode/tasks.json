{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start backend (nodemon)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"cd '${workspaceFolder}\\backend'; npm run dev"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Start frontend (vite)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"cd '${workspaceFolder}\\frontend'; npm run dev"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}